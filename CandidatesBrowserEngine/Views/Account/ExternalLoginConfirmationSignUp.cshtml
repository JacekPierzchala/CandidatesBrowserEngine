@model CandidatesBrowserEngine.Models.ViewModels.Account.ExternalLoginConfirmationViewModel
<h1 class="text-info">Register</h1>
<h3>Associate your @ViewData["ProviderDisplayName"] account</h3>
<form asp-controller="Account" asp-action="ExternalLoginConfirmationSignUp" method="post" role="form" asp-route-returnUrl="@ViewData["ReturnUrl"]" asp-route-provider="@ViewData["ProviderDisplayName"]">
    <h4>Association form</h4>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>
    <p>
        You have been successfully authenticated with <strong>@ViewData["ProviderDisplayName"]</strong>
        @if (@ViewData["ProviderDisplayName"].ToString() == "Google")
        {
            <i style="background-color: #dd4b39; color: white " class="fa fa-google-plus"></i>

        }
        @if (@ViewData["ProviderDisplayName"].ToString() == "Facebook")
        {
            <i style="background-color: #3B5998; color: white " class="fa fa-facebook"></i>

        }
        Please enter your user name and click Register to proceed
    </p>
    <div class="form-group">
        <label asp-for="Email" class="col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="Email" readonly class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Name" class="col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="Name" readonly class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-2">
            <button type="submit" class="btn btn-success form-control">Register</button>
        </div>
    </div>
</form>
@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}