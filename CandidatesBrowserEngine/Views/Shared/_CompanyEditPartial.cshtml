
<div class="modal fade align-bottom" role="dialog" id="companyEditInput" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-lg">
        <div class="modal-content modal-lg">
            <form id="companyEditForm" autocomplete="off" novalidate="novalidate">
                <div class="modal-body">
                    <div class="container">
                        <div class="row pt-1 form-group">
                            <input type="hidden" id="id" />
                            <input type="hidden" id="candidateId" />
                        </div>
                        <div class="d-flex flex-column bg-dark text-white p-2">
                            <div class="row pt-1">
                                <label class="col-6">Company Name: <i class="fas fa-edit"></i> </label>
                                <select   id="companies"  class="form-control col-5 ml-3"></select>
                            </div>
                            <div class="row p-1 pt-2">
                                <label class="col-6">Date Start:</label>
                                <label class="col-3">Date End:  </label>
                                <div class="col-3"><label>Current <input type="checkbox" id="current" onclick="validationCheck()" /> </label></div>
                            </div>
                            <div class="row p-1">
                                <div class="col-6">
                                    <input type="date"   onchange="validationCheck()" id="dateStart" class="form-control" />
                                </div>
                                <div class="col-6">
                                    <input type="date"  id="dateEnd" onchange="validationCheck()" class="form-control" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" id="btnSaveEditCompany" class="btn btn-success" onclick="onSaveEditCompanyModal()">Submit <i class="fas fa-save"></i> </button>
                    <button type="button" class="btn btn-secondary" onclick="onCloseEditCompanyModal()">Close</button> &nbsp;
                </div>

            </form>


        </div>
     </div>
 </div>

