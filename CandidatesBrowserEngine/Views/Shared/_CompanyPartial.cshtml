
@using Microsoft.AspNetCore.Http
@model CandidatesBrowserEngine.Models.ViewModels.CompanyEditViewModel


    <div class="container">
        <div class="row pt-1 form-group">
            <input asp-for="@Model.CompanyViewModel.Id" hidden />
            <input asp-for="@Model.CompanyViewModel.CandidateId" hidden />
            <input asp-for="@Model.CompanyViewModel.TempKey" hidden />

            @*<button onclick="onCompanyChangeSave()" class="btn btn-success ml-3 mt-1">Accept Changes <i class="fas fa-save"></i> </button>*@

            <button id="acceptChanges" type="submit" asp-action="Company" formmethod="post" class="btn btn-success ml-3 mt-1">Accept Changes <i class="fas fa-save"></i> </button>

        </div>
        <div class="d-flex flex-column bg-dark text-white p-2">
            <div class="row pt-1">
                <label class="col-6">Company Name: <i class="fas fa-edit"></i> </label>
                <select asp-items="@Model.CompaniesList" id="companyId"  asp-for="@Model.CompanyViewModel.CompanyId" class="form-control col-5 ml-3"></select>
            </div>
            <div class="row p-1 pt-2">
                <label class="col-6">Date Start:</label>
                <label class="col-3">Date End:  </label>
                <div class="col-3"><label>Current <input type="checkbox" id="current" onclick="validationCheck()" /> </label></div>
            </div>
            <div class="row p-1">
                <div class="col-6">
                    <input asp-for="CompanyViewModel.DateStart" onchange="validationCheck()" id="dateStart" class="form-control" />
                </div>
                <div class="col-6">
                    <input asp-for="CompanyViewModel.DateEnd" id="dateEnd" onchange="validationCheck()" class="form-control" />
                </div>
            </div>
        </div>
    </div>


