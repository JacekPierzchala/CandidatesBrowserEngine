@inject Microsoft.AspNetCore.Identity.SignInManager<CandidatesBrowserEngine.Models.ApplicationUser> signInManager
@if(signInManager.IsSignedIn(User))
{
    <form method="post" id="logOutForm" asp-action="LogOff" asp-controller="Account">
        <ul class="nav navbar-nav">
            <li class="text-white nav-link">Hello, @User.Identity.Name</li>
            <li> <a class="text-white nav-link" href="javascript:document.getElementById('logOutForm').submit()">Log off
                     <i class="fas fa-user-times"></i>
                 </a> </li>
        </ul>
    </form>

}
else
{
<ul class="nav navbar-nav">
    <li class="nav-item pl-2">
        <a class="text-white nav-link" id="registerLink" asp-controller="Account" asp-action="Register">Register 
            <i class="fas fa-user-plus"></i></a>
    </li>
    <li class="nav-item pl-2">
        <a class="text-white nav-link" id="loginLink" asp-controller="Account" asp-action="Login">
            Login <i class="fas fa-user-circle"></i>
        </a>
    </li>
</ul>



}
